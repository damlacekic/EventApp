<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.LogIn"
    android:orientation="vertical"
    android:background="@color/background">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textSize="@dimen/logInTextSize"
            android:layout_marginLeft="30dp"
            android:textColor="@color/textColor">
        </TextView>
    </Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail Address"

        android:textSize="@dimen/logInTextSize"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="125dp"
        >
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        app:boxStrokeColor="@color/background"
        app:hintTextColor="@color/background"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomStart="25dp"
        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:hint="test123456@test.com"
            android:id="@+id/eitTextEmailLogIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textWebEmailAddress">

        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="@dimen/logInTextSize"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        >
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        app:boxStrokeWidth="0dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        app:boxCornerRadiusBottomEnd="25dp"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/background"
        app:hintTextColor="@color/background"
        app:boxCornerRadiusBottomStart="25dp"

        app:boxCornerRadiusTopEnd="25dp"
        app:boxCornerRadiusTopStart="25dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPasswordLogIn"
            android:hint=""
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/LogInButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/buttonColor"
        android:text="Log In"
        android:textColor="@color/white"
        app:cornerRadius="25dp"


        ></Button>

    <Button
        android:id="@+id/CreateAcountButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/buttonColor"
        android:text="Create Account"
        android:textColor="@color/white"
        app:cornerRadius="25dp"

        ></Button>
</LinearLayout>